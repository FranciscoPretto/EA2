<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTituloReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textSize="50sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Nombre"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewApellido"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Apellido"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextApellido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewDNI"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="DNI"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextDNI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewMail"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="E-Mail"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextMail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewContra"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="ContraseÃ±a"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPassword" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/textViewComision"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Comision"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/editTextComision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <Button
                android:id="@+id/buttonRegisterSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Registro" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>