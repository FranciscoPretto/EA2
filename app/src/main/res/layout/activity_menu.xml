<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Menu">

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <TextView
                    android:id="@+id/textTituloMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MenÃº"
                    android:textAlignment="center"
                    android:textSize="50sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <TextView
                    android:id="@+id/textViewNivelBateria"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="46dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <Button
                    android:id="@+id/buttonPaint"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:text="Paint Acelerometro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <Button
                    android:id="@+id/buttonContador"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:text="Contador Proximidad" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <Button
                    android:id="@+id/buttonLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:text="Cerrar Sesion" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>